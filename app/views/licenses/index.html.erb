<%= link_to t('.create'), new_license_path, class: "btn btn-default pull-right" %>
<h1 class="page-header"><%= t '.title' %></h1>

<div class="table-responsive">
  <table class="table table-hover table-fixed">
    <thead>
      <tr>
        <th width="100">ID</th>
        <th>Имя</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @licenses.each do |license| %>
      <tr>
        <td><%= license.id %></td>
        <td><%= license.name %></td>
        <td class="text-right">
          <%= link_to t("edit"), edit_license_path(license), class: "btn btn-primary btn-xs" %>
          <%= link_to t("destroy"), license_path(license), class: "btn btn-danger btn-xs", :method => :delete %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
