<%= render partial: "head", locals: {tender: @tender} %>

<table class="table b-tender__data">
  <tr>
    <td width="240"><b>Seldon Id</b></td>
    <td><%= @tender.seldon_id %></td>
  </tr>
  <tr>
    <td><b>Заказчик</b></td>
    <td><%= @tender.customer %></td>
  </tr>
  <tr>
    <td><b>Начальная макс. цена</b></td>
    <td class="text-success"><%= price(@tender.start_max_price) %> млн. руб.</td>
  </tr>
  <tr>
    <td><b>Этапы тендера</b></td>
    <td>
      <% if @tender.tender_milestones? %>
      <pre><%= @tender.tender_milestones %></pre>
      <% end %>
    </td>
  </tr>
  <tr>
    <td><b>Ссылка на процедуру закупки</b></td>
    <td><%= link_to @tender.url, @tender.url, target: "_blank" %></td>
  </tr>
  </tr>
  <tr>
    <td><b>Дата начала приема заявок</b></td>
    <td><%= @tender.start_date %></td>
  </tr>
  <tr>
    <td><b>Дата окончания приема заявок</b></td>
    <td><%= @tender.end_date %></td>
  </tr>
  <tr>
    <td><b>Срок предоставления документов в  КО для участия в процедуре закупки </b></td>
    <td><%= @tender.docs_deadline %></td>
  </tr>
  <tr>
    <td><b>Срок утверждения Карточки проекта PRE-SALE</b></td>
    <td><%= @tender.approve_deadline %></td>
  </tr>
  <tr>
    <td><b>Срок окончания работ</b></td>
    <td><%= @tender.completion_date %></td>
  </tr>
  <tr>
    <td><b>Участвуем?</b></td>
    <td>
      <%= render partial: "vote_form", locals: {tender: @tender, vote: @vote} %>
    </td>
  </tr>
  <tr>
    <td><b>Все голоса</b></td>
    <td>
      <%= render partial: "shared/votes", locals: {votes: @colleagues_votes} %>
    </td>
  </tr>
  <% unless can? :manage, Tender %>
  <!-- <tr>
    <td><b>Руководитель Pre-sale</b></td>
    <td>
    </td>
  </tr> -->
  <% end %>
  <tr>
    <td><b>Лицензии</b></td>
    <td>
      <% if can? :manage, TenderLicense %>
        <%= render partial: "licenses_form", locals: {tender: @tender} %>
      <% else %>
        <%= render partial: "licenses_list", locals: {tender: @tender} %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td><b>Бенефициар</b></td>
    <td>
      <% if can? :manage, TenderBeneficiary %>
        <%= render partial: "beneficiary_form", locals: {tender: @tender} %>
      <% else %>
        <p><%= beneficiary(@tender.beneficiary) %></p>
        <p class="text-muted"><%= @tender.beneficiary.comment %></p>
      <% end %>
    </td>
  </tr>
  <% if can? :manage, Tender %>
    <tr>
      <td><b>Администратор</b></td>
      <td>
        <%= render partial: "admin_form", locals: {tender: @tender} %>
      </td>
    </tr>
  <% end %>
</table>

<%= render partial: "shared/comments", locals: {commentable: @tender} %>
