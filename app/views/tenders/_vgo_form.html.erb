<%= form_for tender, :html => {class: "form-inline", style: "width: 240px"} do |f| %>
<div>
  <div class="form-group">
    <%= f.label :is_vgo_true, "Да", class: 'radio-inline' do %>
      <%= f.radio_button :is_vgo, true, class: "" %> Да
    <% end %>

    <%= f.label :is_vgo_false, "Нет", class: 'radio-inline' do %>
      <%= f.radio_button :is_vgo, false, class: "" %> Нет
    <% end %>
  </div>&nbsp;&nbsp;&nbsp;&nbsp;

  <div class="form-group">
    <%= f.submit "Сохранить", class: "btn btn-primary btn-xs" %>
  </div>
<div>
<% end %>