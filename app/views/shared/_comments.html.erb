<div class="detailBox">
  <div class="titleBox">
    <label>Комментарии</label>
  </div>
 <!--  <div class="commentBox">

    <p class="taskDescription">Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>
  </div> -->
  <div class="actionBox">
    <% if commentable.comments.empty? %>
      <div class="empty">
        Нет комментариев
      </div>
    <% end %>
    <ul class="commentList">
    <% commentable.comments.each do |comment| %>
      <li>
        <div class="commenterImage">
          <i class="glyphicon glyphicon-user"></i>
        </div>
        <div class="commentText">
          <div class="commentAuthor">
            <b><%= comment.user.name %> </b> 
            <% if comment.user.position? %>
            <i class="">(<%= comment.user.position %>)</i>
            <% end %>
            <span class="date sub-text"><%= comment_time(comment.created_at) %></span>
          </div>
          
          <p class=""><%= comment.message %></p> 

        </div>
      </li>
    <% end %>
    </ul>
    <%= form_for [commentable, Comment.new], :html => {class: "form-inline"} do |f| %>
      <div>
        <div class="form-group">
          <%= f.text_field :message, class: "form-control", placeholder: "Ваш комментарий" %>
        </div>
        <div class="form-group">
          <%= f.submit "Отправить", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>